$(document).ready(function(){
//load proposals for a project

var prop=document.getElementById('prop_content');
  $.ajax({
		type: "GET",
		url: "../proposal/show",
		data: 'project='+2,
		success: function( data, textStatus, jQxhr ){
			alert("Success");
      var datas=jQuery.parseJSON(data);

			if(datas.length>0){
        //hide animator
        $('.AnimatedLoader').hide();
      }
      else{
        //show proposal deails
        for(var i=0;i<datas.length;i++)
          {
                          var tr=prop.insertRow(prop.rows.length);
                          tr.setAttribute("id","com_tr")
                          var td1=tr.insertCell(0);
                          td1.setAttribute("id","col1");
                          td1.innerHTML="<img src='img/userpic.gif'/>";

                          var td2=tr.insertCell(1);
                          td2.setAttribute("id","col2");
                          td2.innerHTML=datas[i].description;

          }
      }

		},
		error: function( jqXhr, textStatus, errorThrown ){
			alert( errorThrown );
		}
	});




});
